<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context.xsd">
<context:annotation-config />
	<bean id="jobDetails" class="com.java.spr.JobDetails">
				<property name="job" value="Software Engineer" />
				<property name="company" value="Mphasis" />
				<property name="location" value="Chennai DLF" />
	</bean>
	<bean id="personShashank" class="com.java.spr.Person">
		<property name="id" value="1" />
		<property name="name" value="Shashank" />
		<property name="family">
			<bean class="com.java.spr.Family">
				<property name="city" value="Tirupathi" />
				<property name="state" value="AP" />
			</bean>
		</property>
	</bean>
	<bean id="personAakash" class="com.java.spr.Person">
		<property name="id" value="2" />
		<property name="name" value="Aakash" />
		<property name="family">
			<bean class="com.java.spr.Family">
				<property name="city" value="Salem" />
				<property name="state" value="TN" />
			</bean>
		</property>
	</bean>
	<bean id="personVarshini" class="com.java.spr.Person">
		<property name="id" value="3" />
		<property name="name" value="Varshini" />
		<property name="family">
			<bean class="com.java.spr.Family">
				<property name="city" value="Kurnool" />
				<property name="state" value="AP" />
			</bean>
		</property>
	</bean>
</beans>